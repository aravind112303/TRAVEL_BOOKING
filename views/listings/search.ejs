<% layout("/layouts/boilerplate") %>  

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(searchedListing of searchedListings) { %>
    <a href="/listings/<%= searchedListing._id%>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%= searchedListing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b> <%= searchedListing.title %> </b><br />
            &#8377; <%= searchedListing.price.toLocaleString("en-IN") %> /night
            <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>